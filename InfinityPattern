# Infinity Pattern
import turtle
from turtle import *
screen = turtle.Screen()
print(screensize())
t= turtle.Turtle()
turtle.pensize(5)
turtle.speed(11)
turtle.bgcolor('black')
turtle.color('yellow')
# turtle.circle(50)
for i in range(150):
     turtle.circle(25)
     if 7 < i < 62:
         turtle.left(5)
     if( 80 < i< 133):
         turtle.right(5)
     if(i<80):
         turtle.forward(10)
     else:
         turtle.forward(5)
